<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
      <p>
        <%= @user.name %><br>
        <%= @user.email %><br>
        <%= @user.created_at %>
      </p>
    </section>
  </aside>
</div>
